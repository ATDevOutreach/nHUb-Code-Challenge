doctype html
html(lang='en')
  head
    title Africa's Talk Hackathon
    meta(charset='utf-8')
    meta(name='viewport', content='width=device-width, initial-scale=1')
    link(rel="shortcut icon", type="img/ico", href="img/favicon.ico")
    // Stylesheets
    link(rel='stylesheet', href='styleshecssets/style.css')
    link(rel='stylesheet', href='css/bootstrap.min.css')
    link(rel='stylesheet', href='css/main.css')
    link(href='https://fonts.googleapis.com/css?family=Roboto+Condensed', rel='stylesheet', type='text/css')
    // Scripts
    script(src='js/jquery-1.12.0.min.js')
    script(src='js/bootstrap.min.js')
    script(src='js/main.js')
    script(src='https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js')
    script(src='https://cdnjs.cloudflare.com/ajax/libs/highlight.js/9.12.0/highlight.min.js')
    script(src='https://cdnjs.cloudflare.com/ajax/libs/highlight.js/9.12.0/languages/json.min.js')
    script(src='https://cdnjs.cloudflare.com/ajax/libs/highlight.js/9.12.0/languages/javascript.min.js')
    script(src='https://cdnjs.cloudflare.com/ajax/libs/highlight.js/9.12.0/languages/xml.min.js')
    script(src='js/main.js')
  body#myPage(data-spy='scroll', data-target='.navbar', data-offset='50')
    // nav section
    nav.navbar.navbar-default.navbar-fixed-top
      .container-fluid
        .navbar-header
          button.navbar-toggle(type='button', data-toggle='collapse', data-target='#myNavbar')
            span.icon-bar
            span.icon-bar
          a.navbar-brand(href='/')
            img(src='img/5.png', alt='')
        #myNavbar.collapse.navbar-collapse
          ul.nav.navbar-nav.navbar-right.nav-items
            li
              a(href='http://docs.africastalking.com')
                em DOC
  body
    .row
      .col-sm-12
        .container.start-screen
          .row
            .col-sm-7
              h1 Africa's Talking
              .row
                .col-sm-12
                  i.j-icon-purchases-feature.pull-left
                  p.lead
                    b Prehack Jos Hackathon.
                    br
                    br
            .col-sm-4.col-sm-offset-1
              .well.panel-highlighted
                form(action='/login', method='post')
                  h5 Sign in with existing account
                  .form-group
                    .input-group
                      span.input-group-addon(style='font-size: 11px;')
                        i.icon.icon-envelope
                      input#username.form-control(autofocus='', style='width:100%', placeholder='Email or Username', name='username', type='text')
                  .form-group
                    .input-group
                      span.input-group-addon
                        i.icon.icon-lock
                      input.form-control(style='width:100%', placeholder='Password', name='password', type='password')
                  .form-group.clearfix
                    .pull-left
                      button.btn.btn-primary.btn-lg.login-submit-btn Sign In
                      span.unit-container-xs
                    div
                      a.btn.btn-lg.btn-link(style='padding-left: 0;', href='/forgot') Forgot password?
              .well.panel-highlighted
                form(action='/register', method='get')
                  h5 Not registered yet?
                  h3 Create an Account
                  .form-group.clearfix
                    button.btn.btn-primary.btn-lg.eml-submit-btn Sign Up
