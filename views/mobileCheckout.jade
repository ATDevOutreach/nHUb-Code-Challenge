  body#myPage(data-spy='scroll', data-target='.navbar', data-offset='50')
    // nav section
    nav.navbar.navbar-default.navbar-fixed-top
      .container-fluid
        .navbar-header
          button.navbar-toggle(type='button', data-toggle='collapse', data-target='#myNavbar')
            span.icon-bar
            span.icon-bar
          a.navbar-brand(href='/')
            img(src='img/5.png', alt='')
        #myNavbar.collapse.navbar-collapse
          ul.nav.navbar-nav.navbar-right.nav-items
            li
              a(href='http://docs.africastalking.com')
                em DOC
            li
              a(href='/login')
                em LOGIN
            br
  body
    h1.page-header.text-center Mobile Checkout
    br
    form#mobileCheckoutForm(action="/payments/mobile-checkout", method="post")
        .form-group.row
            label.col-sm-2.col-form-label(for="productName") Product
            .col-sm-7
                input#productName.form-control(name="productName", type='text', placeholder='Enter product name' required)
                small.form-text.text-muted
                    | Enter your product name from Africa's Talking
        .form-group.row
            label.col-sm-2.col-form-label(for="phoneNumber") Phone
            .col-sm-7
                input#phoneNumber.form-control(name="phoneNumber", type='phone', placeholder='Enter phone number' required)
                small.form-text.text-muted
                    | Enter your phone number
        .form-group.row
            label.col-sm-2.col-form-label(for="currencyCode") Currency
            .col-sm-7
                select#currencyCode.custom-select(name="currencyCode", type="text")
                    option(selected='' value='Naira') â‚¦
                    option(value='UGS') UGS
                    option(value='TZS') TZS
                small.form-text.text-muted
                    | Choose currency
        .form-group.row
            label.col-sm-2.col-form-label(for="amount") Amount
            .col-sm-7
                input#amount.form-control(name="amount", type='number', min='10', step='any', placeholder='Enter amount' required)
                small.form-text.text-muted
                    | Enter the amount to send
        br
        .form-group.row
            .col-sm-7
                button.btn.btn-success(type='submit') Send
